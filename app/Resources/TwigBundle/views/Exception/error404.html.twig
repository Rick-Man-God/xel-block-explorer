{% extends 'ElasticBundle::layout.html.twig' %}
{% block body %}
<!-- Content Header (Page header) -->
    <section class="content-header">
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="error-page">
        <h2 class="headline text-blue"> 404</h2>

        <div class="error-content">
          <h3><i class="fa fa-warning text-yellow"></i> Oops! Page not found.</h3>

          <p>
            We could not find the page you were looking for.
            Meanwhile, you may <a href="{{ path('elastic_homepage') }}">return to overview</a> or try using the search form.
          </p>

          <form class="search-form" action="{{ path('elastic_search') }}" method="post">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="address / height / tx id / tx fullhash" name="input">

              <div class="input-group-btn">
                <button type="submit" name="submit" class="btn btn-warning btn-flat"><i class="fa fa-search"></i>
                </button>
              </div>
            </div>
            <!-- /.input-group -->
          </form>
        </div>
        <!-- /.error-content -->
      </div>
      <!-- /.error-page -->
    </section>
    <!-- /.content -->
{% endblock %}
{% block page_scripts %}
{% endblock %}